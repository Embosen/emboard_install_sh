background no
alignment top_right
double_buffer yes
own_window yes
own_window_type desktop
own_window_transparent yes
own_window_argb_visual yes
own_window_argb_value 0
use_xft yes
font DejaVu Sans Mono:size 10
xftalpha 0.1
default_color white

TEXT
${color grey}Hostname: $color$nodename
${color grey}IP: $color${addr eth0}
${color grey}wifi_IP: $color${addr wlan0}
${color grey}Memory: $color${mem} / ${memmax}
${color grey}Storage: $color${fs_used /} / ${fs_size /}
${color grey}User: $color emboard / Passwd: 1

